<Window x:Class="FitApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="480" Width="320">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Crimson"/>
                <GradientStop Color="White" Offset="0.508"/>
                <GradientStop Color="#FFFA6767" Offset="0.913"/>
                <GradientStop Color="#FFFA6767" Offset="0.095"/>
                <GradientStop Color="Crimson" Offset="0.994"/>
                <GradientStop Color="Crimson"/>
                <GradientStop Color="Crimson"/>
                <GradientStop Color="#D3D3D3" Offset="0.22"/>
                <GradientStop Color="#D3D3D3" Offset="0.784"/>
                <GradientStop Color="Crimson" Offset="0"/>
                <GradientStop Color="Crimson"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Bottom" Orientation="Horizontal" Grid.ColumnSpan="2">
            <Label Content="Fit" FontSize="40" FontStyle="Oblique" FontFamily="Arial" />
            <Label Content="Track" FontSize="40" FontFamily="Arial" FontWeight="Bold"/>
            

        </StackPanel>
        <Button Content="Sign In" Width="100" Height="30" 
                Background="#DC143C" Foreground="AliceBlue"
                BorderBrush="Red" BorderThickness="2" Padding="10" Grid.Row="1" Command="{Binding LoginWindow}">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}" 
                            CornerRadius="15">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button Content="Register" Width="100" Height="30" 
                Background="#DC143C" Foreground="AliceBlue"
                BorderBrush="Red" BorderThickness="2" Padding="10" Grid.Row="1" Grid.Column="1" Command="{Binding RegisterWindow}">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}" 
                            CornerRadius="15">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Label x:Name="lblForgotPassword" Content="Forgot password?" Grid.ColumnSpan="2" FontSize="12" Grid.Row="1" RenderTransformOrigin="0.523,1.953" Margin="106,136,106,70" Foreground="Blue" FontFamily="Arial" MouseDoubleClick="lblForgotPassword_MouseDoubleClick" Height="80" Width="200"/>



    </Grid>
</Window>
