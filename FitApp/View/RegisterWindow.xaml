<Window x:Class="FitApp.View.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitApp.View"
        mc:Ignorable="d"
        Title="RegisterWindow" Height="480" Width="320">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFF9F8F8" Offset="1"/>
                <GradientStop Color="Black"/>
                <GradientStop Color="Crimson" Offset="0"/>
                <GradientStop Color="#FFFA6767" Offset="0.214"/>
            </LinearGradientBrush>
        </Grid.Background>
        <StackPanel Orientation="Vertical" VerticalAlignment="Bottom">
            <ComboBox x:Name="Countries" FontSize="15" SelectionChanged="Countries_SelectionChanged"/>
  
            <Label Content="Username:" FontSize="15" Foreground="AliceBlue"/>
            <TextBox x:Name="txtBoxEmail" Text= "{Binding UsernameInput}"/>
            <Label Content="Password:" FontSize="15" Foreground="White" />
            <TextBox x:Name="txtBoxPassword" Text="{Binding PasswordInput}"/>
            <Label Content="Confirm password:" FontSize="15" Foreground="AliceBlue"/>
            <TextBox x:Name="txtBoxConfirm"/>
        </StackPanel>
        <Button Content="Register Now" Width="100" Height="30" Grid.Row="2" 
         Background="#DC143C" Foreground="AliceBlue" VerticalAlignment="Center"
         BorderBrush="Red" BorderThickness="2" Padding="10" Command="{Binding WorkoutsWindow}">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                     BorderBrush="{TemplateBinding BorderBrush}" 
                     BorderThickness="{TemplateBinding BorderThickness}" 
                     CornerRadius="15">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <ComboBox HorizontalAlignment="Left" Height="0" Margin="377,251,0,0" Grid.Row="2" VerticalAlignment="Top" Width="120"/>
        <Grid.RowDefinitions>
            <RowDefinition Height="280"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
    </Grid>
</Window>
