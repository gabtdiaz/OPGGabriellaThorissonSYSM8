<Window x:Class="FitApp.View.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitApp.View"
        mc:Ignorable="d"
        Title="RegisterWindow" Height="480" Width="320">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="120"/>
            <RowDefinition Height="100"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="Join FitTrack today!" HorizontalAlignment="Center" FontSize="30" VerticalAlignment="Center" FontFamily="Arial" FontWeight="Bold"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" Height="50" VerticalAlignment="Top">
            <Label Content="Username"/>
            <TextBox Width="200" VerticalAlignment="Top"
                 Text="{Binding UsernameInput}"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" Height="50" VerticalAlignment="Center" Margin="4,30,0,0">
            <Label Content="Password"/>
            <PasswordBox Width="200" VerticalAlignment="Top"
                     PasswordBox.PasswordChanged="{Binding PasswordInput}"/>
        </StackPanel>
        <ComboBox Grid.Row="1" Width="200" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="62,0,0,0"
             ItemsSource="{Binding CountryComboBox}" SelectedItem="{Binding Country}">
            <ComboBoxItem Content="Select country" IsSelected="True" IsEnabled="False"/>
            <ComboBoxItem Content="Sweden"/>
            <ComboBoxItem Content="Norway"/>
            <ComboBoxItem Content="Denmark"/>
            <ComboBoxItem Content="Finland"/>
        </ComboBox>

        <Button Content="Create account" Width="130" Height="30"
         Background="#DC143C" Foreground="AliceBlue"
         BorderBrush="#DC143C" BorderThickness="2" Padding="10" 
         Grid.Row="2" VerticalAlignment="Center" Command="{Binding RegisterCommand}">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                     BorderBrush="{TemplateBinding BorderBrush}" 
                     BorderThickness="{TemplateBinding BorderThickness}" 
                     CornerRadius="15">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</Window>