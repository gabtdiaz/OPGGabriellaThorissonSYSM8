<Window x:Class="FitApp.View.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitApp.View"
        mc:Ignorable="d"
        Title="RegisterWindow" Height="480" Width="320">

    <Grid Background="LightGray">

        <StackPanel>
            <Label Content="Join FitTrack today!" HorizontalAlignment="Center" FontSize="30" VerticalAlignment="Center" FontFamily="Arial" FontWeight="Bold" Margin="0,0,0,40"/>

        <!-- Username input -->
        <StackPanel Orientation="Horizontal" Height="25" Margin="0,0,0,20">
            <Label Content="Username"/>
            <TextBox Width="200"
                Text="{Binding UsernameInput}"/>
        </StackPanel>

        <!-- Password input -->
            <StackPanel Orientation="Horizontal" Height="25" Margin="0,0,0,20">
            <Label Content="Password "/>
            <PasswordBox x:Name="PasswordBox" Width="200" PasswordChanged="{Binding PasswordInput}"/>
        </StackPanel>
            
        <!-- Bekräfta lösenord -->
            <StackPanel Orientation="Horizontal" Height="25" Margin="0,0,0,20">
            <Label Content="Password "/>
            <PasswordBox x:Name="PasswordBoxConfirm" Width="200"
                 PasswordChanged="{Binding PasswordInput}"/>
        </StackPanel>

        <!-- Välj land -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
            <Label Content="Country   "/>
            <ComboBox Width="200" 
             ItemsSource="{Binding CountryComboBox}" SelectedItem="{Binding SelectedCountry}">
            </ComboBox>
        </StackPanel>

        <!-- Skapa konto button -->
        <Button Content="Create account" Width="130" Height="30"
            Background="#DC143C" Foreground="AliceBlue"
            BorderBrush="#DC143C" BorderThickness="2" Padding="10" 
            VerticalAlignment="Center" Command="{Binding RegisterCommand}">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                     BorderBrush="{TemplateBinding BorderBrush}" 
                     BorderThickness="{TemplateBinding BorderThickness}" 
                     CornerRadius="15">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        </StackPanel>
    </Grid>
</Window>
