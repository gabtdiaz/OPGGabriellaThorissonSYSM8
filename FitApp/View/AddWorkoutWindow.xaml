<Window x:Class="FitApp.View.AddWorkoutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitApp.View"
        mc:Ignorable="d"
        Title="AddWorkoutWindow" Height="480" Width="320">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="LightGray"/>
                <GradientStop Color="LightGray" Offset="1"/>
                <GradientStop Color="White" Offset="0.1"/>
                <GradientStop Color="White" Offset="0.9"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="153*"/>
            <RowDefinition Height="195*"/>
            <RowDefinition Height="28*"/>
            <RowDefinition Height="28*"/>
        </Grid.RowDefinitions>
        <!--Logga-->
        <StackPanel Width="100" Height="60">
            <Label Content="F I T" HorizontalAlignment="Center" FontSize="18" VerticalAlignment="Top" FontFamily="Arial Black" FontWeight="Bold" Foreground="#FF5B5B5B"/>
            <Label Content="&#x2AF8;Track" HorizontalAlignment="Center" VerticalAlignment="Top" FontFamily="Arial" FontSize="13" Foreground="DarkOrange"/>
        </StackPanel>

        <!--TextBlocks-->
        <StackPanel Grid.Row="1" Grid.RowSpan="4">
            <StackPanel Orientation="Horizontal" Grid.Row="1" Background="LightGray">
                <TextBlock x:Name="txtBlockDateTime" Text="Date"  VerticalAlignment="Top" Width="60"/>
                <TextBlock x:Name="txtBlockType" Text="Type" VerticalAlignment="Top" Width="60"/>
                <TextBlock x:Name="txtBlockDuration" Text="Duration" VerticalAlignment="Top" Width="60" />
                <TextBlock x:Name="txtBlockCaloriesBurned" Text="Cal" VerticalAlignment="Top" Width="60"/>
                <TextBlock x:Name="txtBlockNotes" Text="Notes" VerticalAlignment="Top" Width="60"/>
            </StackPanel>

            <!--Textboxar för användarinmatning-->
            <StackPanel Orientation="Horizontal" Grid.Row="1">
                <TextBox x:Name="txtBoxDateTime" Text="{Binding Date}" VerticalAlignment="Top" Width="60"/>
                <TextBox x:Name="txtBoxType" Text="{Binding Type}" VerticalAlignment="Top" Width="60"/>
                <TextBox x:Name="txtBoxDuration" Text="{Binding Duration}" VerticalAlignment="Top" Width="60"/>
                <TextBox x:Name="txtBoxCaloriesBurned" Text="{Binding CaloriesBurned}" VerticalAlignment="Top" Width="60"/>
                <TextBox x:Name="txtBoxNotes" Text="{Binding Notes}" VerticalAlignment="Top" Width="80"/>
            </StackPanel>
            
            <!--Knapp för att lägga till träningspass-->
            <Button x:Name="btnAdd" Content="Add" Command="{Binding AddWorkout}" Foreground="AliceBlue" BorderBrush="Red" BorderThickness="2" 
                    Padding="10" Background="Crimson" HorizontalAlignment="Center" VerticalAlignment="Center" Height="25" Width="80">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <!--ListBox för att visa träningspass-->
        </StackPanel>
        <ListBox ItemsSource="{Binding Workouts}" SelectedItem="{Binding SelectedWorkout}" Height="280" Width="280"
                     Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,60,0,0" Grid.RowSpan="3"/>
        <StackPanel Grid.Row="3" Orientation="Horizontal" VerticalAlignment="Top" Margin="0,11,0,0" Grid.RowSpan="2">

            <!--Buttons för att ändra och spara träningspass-->
            <Button Content="Edit" Command="{Binding EditWorkout}" Width="80" Height="25" 
                Foreground="AliceBlue" VerticalAlignment="Center" BorderBrush="Red" BorderThickness="2" 
                    Padding="10" Margin="20,0,120,0" Background="Crimson">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" 
                        BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button Content="Save" Command="{Binding SaveWorkout}" Width="80" Height="25" 
                Foreground="AliceBlue" VerticalAlignment="Center" BorderBrush="Red" BorderThickness="2" 
                Padding="10" Margin="0,0,20,0" Background="Crimson">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" 
                    BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
    </Grid>
</Window>
