<Window x:Class="FitApp.View.AddWorkoutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitApp.View"
        mc:Ignorable="d"
        Title="AddWorkoutWindow" Height="480" Width="320">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="LightGray"/>
                <GradientStop Color="LightGray" Offset="1"/>
                <GradientStop Color="White" Offset="0.1"/>
                <GradientStop Color="White" Offset="0.9"/>
            </LinearGradientBrush>
        </Grid.Background>
        
        <!--Rader-->
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="80*"/>
        </Grid.RowDefinitions>
        
        <!--Logga-->
        <StackPanel Width="100" Height="60">
            <Label Content="F I T" HorizontalAlignment="Center" FontSize="18" 
                   VerticalAlignment="Top" FontFamily="Arial Black" FontWeight="Bold" Foreground="#FF5B5B5B"/>
            <Label Content="&#x2AF8;Track" HorizontalAlignment="Center" VerticalAlignment="Top" FontFamily="Arial" 
                   FontSize="13" Foreground="DarkOrange"/>
        </StackPanel>

        <!--TextBlocks-->
        <StackPanel Grid.Row="1">
            <StackPanel Orientation="Horizontal" Grid.Row="1" Background="LightGray">
                <TextBlock x:Name="txtBlockType" Text="Type" VerticalAlignment="Top" Width="70"/>
                <TextBlock x:Name="txtBlockDateTime" Text="Date"  VerticalAlignment="Top" Width="60"/>
                <TextBlock x:Name="txtBlockDuration" Text="Duration" VerticalAlignment="Top" Width="60" />
                <TextBlock x:Name="txtBlockNotes" Text="Notes" VerticalAlignment="Top" Width="70"/>
                <TextBlock x:Name="txtBlockCaloriea" Text="KCAL" VerticalAlignment="Top" Width="60"/>
            </StackPanel>

            <!--Textboxar för användarinmatning-->
            <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Left" Height="21">
                <ComboBox x:Name="comboBoxType" ItemsSource="{Binding WorkoutTypeComboBox}" 
                          SelectedItem="{Binding SelectedWorkout}" VerticalAlignment="Top" Width="70" Height="22"/>
                <TextBox x:Name="txtBoxDateTime" Text="{Binding DateInput, StringFormat=yyyy-MM-dd}" VerticalAlignment="Top" Width="60" Height="21"/>
                <TextBox x:Name="txtBoxDuration" Text="{Binding DurationInput}" VerticalAlignment="Top" Width="60" Height="21"/>
                <TextBox x:Name="txtBoxNotes" Text="{Binding NotesInput}" VerticalAlignment="Top" Width="70" Height="21"/>
                <TextBox x:Name="txtBoxCaloriesBurned" Text="{Binding CaloriesBurnedInput}" Width="60" Height="21"/>
            </StackPanel>
            
            <!--TextBox för Distance (endast synlig för Cardio)-->
            <StackPanel Orientation="Horizontal" Height="21" HorizontalAlignment="Left" >
                <TextBlock Text="Distance:" Background="LightGray" Visibility="{Binding CardioVisibility}"/>
                <TextBox x:Name="txtBoxDistance" Text="{Binding Distance}" Visibility="{Binding CardioVisibility}" Width="82" Height="21"/>

                <!-- TextBox för Repetitions och Sets (endast synlig för Strength) -->
                <StackPanel Visibility="{Binding StrengthVisibility}" HorizontalAlignment="Right" Orientation="Horizontal" Height="21">
                    <TextBlock Text="Reps:" Background="LightGray"/>
                    <TextBox x:Name="txtBoxRepetitions" Text="{Binding Repetitions}" Width="69"/>
                    <TextBlock Text="Sets:" Background="LightGray"/>
                    <TextBox x:Name="txtBoxSets" Text="{Binding Sets}" Width="68"/>
                </StackPanel>
            </StackPanel>
            
            <!--Knapp för att lägga till träningspass-->
            <Button x:Name="btnSave" Content="Save" Command="{Binding SaveWorkout}" Foreground="AliceBlue" 
                BorderBrush="Red" BorderThickness="2" Grid.Row="2" Padding="10" Background="Crimson" HorizontalAlignment="Center" 
                VerticalAlignment="Center" Height="25" Width="80" Margin="0,10,0,10">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            
        <!--ListBox för att visa träningspass-->
            <ListBox ItemsSource="{Binding Workouts}" SelectedItem="{Binding WorkoutTypeComboBox}" Height="280" Width="280"
                     Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.RowSpan="3"/>
        </StackPanel>
    </Grid>
</Window>
