<Window x:Class="FitApp.View.AddWorkoutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitApp.View"
        mc:Ignorable="d"
        Title="AddWorkoutWindow" Height="480" Width="350">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="LightGray"/>
                <GradientStop Color="LightGray" Offset="1"/>
                <GradientStop Color="White" Offset="0.1"/>
                <GradientStop Color="White" Offset="0.9"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1">
            <StackPanel Orientation="Horizontal" Grid.Row="1">

            <TextBlock x:Name="txtBlockDateTime" Text="Date"  VerticalAlignment="Top" Width="60"/>
                <TextBlock x:Name="txtBlockType" Text="Type" VerticalAlignment="Top" Width="60"/>
                <TextBlock x:Name="txtBlockDuration" Text="Duration" VerticalAlignment="Top" Width="60" />
                <TextBlock x:Name="txtBlockCaloriesBurned" Text="Cal" VerticalAlignment="Top" Width="60"/>
                <TextBlock x:Name="txtBlockNotes" Text="Notes" VerticalAlignment="Top" Width="60"/>
            

        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="1">

            <TextBox x:Name="txtBoxDateTime"  VerticalAlignment="Top" Width="60" />
            <TextBox x:Name="txtBoxType" VerticalAlignment="Top" Width="60"/>
            <TextBox x:Name="txtBoxDuration" VerticalAlignment="Top" Width="60" />
            <TextBox x:Name="txtBoxCaloriesBurned" VerticalAlignment="Top" Width="60"/>
            <TextBox x:Name="txtBoxNotes" VerticalAlignment="Top" Width="60"/>
            <Button x:Name="btnAdd" Content="Add" HorizontalAlignment="Right" VerticalAlignment="Top" Width="60"/>
        </StackPanel>
            
        </StackPanel>
        <ListBox ItemsSource="{Binding Workouts}" SelectedItem="{Binding SelectedWorkout}" Height="300" Width="320"
                 Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,40,0,0" SelectionChanged="ContactList_SelectionChanged"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0,0,0,20">
            <Button Content="Edit" Command="{Binding EditWorkout}" Width="80" Height="25" 
            Foreground="AliceBlue" VerticalAlignment="Center" BorderBrush="LightGray" BorderThickness="2" Padding="10" Margin="20,0,160,0" Background="DarkGray">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" 
                    BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button Content="Save" Command="{Binding SaveWorkout}" Width="80" Height="25" 
            Foreground="AliceBlue" VerticalAlignment="Center" BorderBrush="LightGray" BorderThickness="2" 
            Padding="10" Margin="0,0,20,0" Background="DarkGray">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" 
                BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        </StackPanel>

        <!--Logga-->
        <StackPanel Width="100" Height="60">
            <Label Content="F I T" HorizontalAlignment="Center" FontSize="18" VerticalAlignment="Top" FontFamily="Arial Black" FontWeight="Bold" Foreground="#FF5B5B5B"/>
            <Label Content="&#x2AF8;Track" HorizontalAlignment="Center" VerticalAlignment="Top" FontFamily="Arial" FontSize="13" Foreground="DarkOrange"/>
        </StackPanel>
    </Grid>
</Window>
